FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*
USER app
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src

COPY Directory.Build.props .
COPY Directory.Packages.props .

COPY src/SceneSplit.Backend/SceneSplit.Api ./SceneSplit.Api
COPY src/SceneSplit.Backend/SceneSplit.Configuration ./SceneSplit.Configuration
COPY src/SceneSplit.Backend/SceneSplit.ImageCompression.Sdk ./SceneSplit.ImageCompression.Sdk
COPY src/SceneSplit.Backend/SceneSplit.GrpcClientShared ./SceneSplit.GrpcClientShared
COPY src/SceneSplit.Backend/SceneSplit.Backend.ServiceDefaults ./SceneSplit.Backend.ServiceDefaults
COPY src/SceneSplit.Backend/SceneSplit.Observability ./SceneSplit.Observability

WORKDIR /src/SceneSplit.Api
RUN dotnet restore "SceneSplit.Api.csproj"
RUN dotnet build "SceneSplit.Api.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "SceneSplit.Api.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "SceneSplit.Api.dll"]